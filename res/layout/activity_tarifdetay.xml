<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F5F5" >

    <TextView
        android:id="@+id/text_kategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:onClick="onCikis"
        android:text="Ana Yemekler"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/img_tarifresim"
        android:layout_width="140dip"
        android:layout_height="110dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/text_kategori"
        android:clickable="true"
        android:onClick="onCikis"
        android:scaleType="fitCenter"
        android:src="@drawable/gorsel_yok" />

    <TextView
        android:id="@+id/text_tarifad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/img_tarifresim"
        android:layout_toRightOf="@+id/img_tarifresim"
        android:clickable="true"
        android:onClick="onCikis"
        android:text="Abuzer Kebabı"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/text_hazirlama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_tarifresim"
        android:layout_alignLeft="@+id/textView2"
        android:clickable="true"
        android:onClick="onCikis"
        android:text="4 Dak." />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_pisirme"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:onClick="onCikis"
        android:text="PİŞİRME"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/text_pisirme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_hazirlama"
        android:layout_alignBottom="@+id/text_hazirlama"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:onClick="onCikis"
        android:text="15 Dak." />

    <ImageButton
        android:id="@+id/btn_sil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-7dip"
        android:src="@drawable/sil" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/text_hazirlama"
        android:layout_toRightOf="@+id/img_tarifresim"
        android:clickable="true"
        android:onClick="onCikis"
        android:text="HAZIRLAMA"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="2dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/img_tarifresim"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:background="#C6361D" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_sil"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/view1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textview002"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="Malzemeler"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/text_malzemeler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="750 gram kıyma
5 diş sarımsak
Tuz, karabiber, pulbiber
3 domates
Üzeri için:
3 soğan
4 biber
5 domates
Tuz
Yarım çay bardağı yağ"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textview01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="Hazırlanışı"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/text_hazirlanisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kıyma, ince kıyılmış sarımsak, baharat ve küçük doğranmış domates ile iyice yoğurulur. Kıymalı harç tepsinin ortasına bastırılarak yayılır. Tepsinin boş kalan kısmına halka halka doğranmış soğanlar dizilir. Üzerlerine dilimlenmiş domates ve biberler dizilir. Tuz serpilip önceden ısıtılmış 180 derece fırında pişirilir."
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textview04"
                    android:layout_width="281dp"
                    android:layout_height="wrap_content"
                    android:text="Kişi"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/text_kisi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

            <TextView
                android:id="@+id/textview06"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Puanı"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/img_1puan"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:src="@drawable/yildiz_bos"
                    android:tag="1" />

                <ImageButton
                    android:id="@+id/img_2puan"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:src="@drawable/yildiz_bos"
                    android:tag="2" />

                <ImageButton
                    android:id="@+id/img_3puan"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:src="@drawable/yildiz_bos"
                    android:tag="3" />

                <ImageButton
                    android:id="@+id/img_4puan"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:src="@drawable/yildiz_bos"
                    android:tag="4" />

                <ImageButton
                    android:id="@+id/img_5puan"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:src="@drawable/yildiz_bos"
                    android:tag="5" />

                <ImageButton
                    android:id="@+id/img_6puan"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:src="@drawable/yildiz_bos"
                    android:tag="6" />

                <ImageButton
                    android:id="@+id/img_7puan"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:src="@drawable/yildiz_bos"
                    android:tag="7" />

                <ImageButton
                    android:id="@+id/img_8puan"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:src="@drawable/yildiz_bos"
                    android:tag="8" />

                <ImageButton
                    android:id="@+id/img_9puan"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:src="@drawable/yildiz_bos"
                    android:tag="9" />

                <ImageButton
                    android:id="@+id/img_10puan"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:src="@drawable/yildiz_bos"
                    android:tag="10" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/btn_kamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btn_sil"
        android:src="@drawable/kamera" />

    <ImageButton
        android:id="@+id/btn_kaydet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/btn_kamera"
        android:src="@drawable/kaydet" />

    <ImageButton
        android:id="@+id/btn_share"
        android:layout_width="36dip"
        android:layout_height="36dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/ozel_buton"
        android:padding="1dp"
        android:src="@drawable/share" />

    <!--
        <com.facebook.share.widget.ShareButton
        android:id="@+id/shareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" />
    -->


    <!--
